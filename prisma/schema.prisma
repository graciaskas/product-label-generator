generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // provider = "mysql"
  url      = env("DATABASE_URL")
}

model pe_users {
  id         Int     @id @default(autoincrement())
  firstName  String? 
  lastName   String?
  email      String? @unique(map: "email") 
  password   String 
  role       String 
  department String  
  phone      String  @unique(map: "phone") 
}

model pe_products {
  id   Int    @id @default(autoincrement())
  name String @unique(map: "name")
}
